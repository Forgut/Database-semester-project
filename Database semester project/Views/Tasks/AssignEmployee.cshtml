@model Database_semester_project.Models.Tasks

@{
    ViewBag.Title = "AssignEmployee";
}

<h2>Assign Employee</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Tasks</h4>
    <hr />
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ProductID)
    @Html.HiddenFor(model => model.Predicted_work_time)
    @Html.HiddenFor(model => model.Actual_work_time)
    @Html.HiddenFor(model => model.Finished)


    @Html.DropDownListFor(model => model.Employees, Model.AvaiableEmployees, htmlAttributes: new { @class = "control-label col-md-2" })


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Assign" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
