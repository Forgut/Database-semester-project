@model Database_semester_project.Models.Ingredients

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Ingredients</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.Raw("Stored amount")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stored_amount)
        </dd>
        <dt>
            @Html.Raw("Used in products")
        </dt>
        @if (Model.Products_Ingredients.Count > 0)
        {
            foreach (var product in Model.Products_Ingredients)
            {
                <dd>
                    @Html.ActionLink(product.ProductName, "../Products/Details", new { id = product.ProductID})
                </dd>
            }
        }
        else
        {
            <dd>
                @Html.Raw("No products so far")
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
