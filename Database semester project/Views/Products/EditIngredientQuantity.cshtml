@model Database_semester_project.Models.Products_Ingredients

@{
    ViewBag.Title = "Edit Ingredient Quantity";
}
@if (TempData["EditIngredientQuantity"] != null)
{
    @Html.Raw(TempData["EditIngredientQuantity"])
}

<h2>Edit @Model.IngredientName amount required to create @Model.ProductName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Products_Ingredients</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductID)
        @Html.HiddenFor(model => model.Edit_time)
        @Html.HiddenFor(model => model.IngredientID)

        <div class="form-group">
            @Html.LabelFor(model => model.Required_ingredient_amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Required_ingredient_amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Required_ingredient_amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
